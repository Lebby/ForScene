    <module id="${rootArtifactId}-android" dir="android" name="${rootArtifactId}-android">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>res/values</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-ldpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-hdpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>res/drawable-mdpi</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>AndroidManifest.xml</include>
            <include>default.properties</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>proguard.cfg</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
